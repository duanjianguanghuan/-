      <title>抽奖箱</title>
      <style>
          body {
              font-family: 'Arial', sans-serif;
              background-color: #f7f7f7;
              margin: 0;
              padding: 0;
              display: flex;
              justify-content: center;
              align-items: center;
              height: 100vh;
          }
          #lottery-container {
              background-color: #fff;
              padding: 20px;
              border-radius: 10px;
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
              text-align: center;
          }
          #draw-btn, #reset-btn {
              padding: 10px 20px;
              margin: 10px;
              border: none;
              background-color: #007bff;
              color: white;
              border-radius: 5px;
              cursor: pointer;
              font-size: 16px;
              transition: background-color 0.3s;
          }
          #draw-btn:hover, #reset-btn:hover {
              background-color: #0056b3;
          }
          #result, #prize-details {
              margin-top: 20px;
              font-size: 20px;
              color: green;
              animation: fadeIn 1s;
          }
          #history {
              margin-top: 10px;
              font-size: 16px;
              color: #555;
          }
          .prize-record {
              margin-top: 5px;
              padding: 5px;
              background-color: #e9ecef;
              border-radius: 5px;
              display: inline-block;
              margin-right: 10px;
              margin-bottom: 5px;
          }
          .prize-record span {
              font-weight: bold;
          }
          @keyframes fadeIn {
              from { opacity: 0; }
              to { opacity: 1; }
          }
